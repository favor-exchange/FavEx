<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/totalCostPanel">
    <TextView
        android:id="@+id/totalCostLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:text="Your total is "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dollar"
        android:text="$"
        android:textColor="@color/currencyColor"
        android:textSize="24sp"
        android:layout_toRightOf="@id/totalCostLabel"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100.00"
        android:textSize="24sp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@id/dollar"
        android:textColor="@color/currencyColor"
        android:id="@+id/totalCost" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tipPrompt"
        android:text="How much do you want to tip?"
        android:textAlignment="center"
        android:elegantTextHeight="true"
        android:textSize="18sp"
        android:layout_below="@id/totalCostPanel"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We recommend at least 10% of your total cost"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:id="@+id/tipSuggest"
        android:layout_below="@+id/tipPrompt"
        android:layout_centerHorizontal="true" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputTipPanel"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_below="@id/tipSuggest"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="10dp"
            android:id="@+id/dollar"
            android:text="$"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter tip amount"
            android:id="@+id/tip"
            android:layout_toEndOf="@id/dollar"
            android:layout_toRightOf="@id/dollar"
            android:inputType="number"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirmationPanel"
        android:layout_below="@+id/inputTipPanel"
        android:layout_marginTop="24dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin">
        <Button
            android:text="Cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/cancelBtn"/>
        <Button
            android:text="Confirm Request"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/confirmBtn"
            android:enabled="false"/>
    </LinearLayout>
</RelativeLayout>