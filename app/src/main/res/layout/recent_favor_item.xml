<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recent_favor_card"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:id="@+id/recent_favorRelativeView">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/recent_title"
            android:text="Title"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/recent_favorDetails"
            android:layout_alignStart="@+id/recent_favorDetails" />
        <LinearLayout
            android:id="@+id/recent_favorDetails"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">
                <TextView
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/recent_tipLabel"
                    android:text="Tip: $" />
                <TextView
                    android:text="10.00"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/recent_tip"
                    android:layout_toRightOf="@id/recent_tipLabel"
                    android:layout_toEndOf="@id/recent_tipLabel" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/recent_priceLabel"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:text="Price Range:"
                    android:layout_below="@id/recent_tipLabel" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:id="@+id/recent_minPrice"
                    android:layout_toRightOf="@id/recent_priceLabel"
                    android:layout_below="@id/recent_tipLabel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/recent_minPrice"
                    android:text=" to "
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:id="@+id/recent_priceConjunction"
                    android:layout_below="@id/recent_tipLabel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/recent_priceConjunction"
                    android:text="$10"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:id="@+id/recent_maxPrice"
                    android:layout_below="@id/recent_tipLabel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/recent_distanceLabel"
                    android:layout_below="@id/recent_minPrice"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:text="Distance: "
                    android:visibility="invisible"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_below="@id/recent_minPrice"
                    android:id="@+id/recent_distance"
                    android:layout_toRightOf="@id/recent_distanceLabel"
                    android:text=" xxx m"
                    android:visibility="invisible"/>
            </RelativeLayout>

            <ImageView
                android:contentDescription="@string/locationImageDescription"
                android:id="@+id/recent_locationImage"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recent_attributionLabel"
            android:layout_below="@id/recent_favorDetails"
            android:text="Image attribution: "
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recent_attribution"
            android:layout_below="@id/recent_favorDetails"
            android:layout_toRightOf="@id/recent_attributionLabel"
            android:layout_toEndOf="@id/recent_attributionLabel"
            android:text="Google's attribution"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>